- from './mixins/titleBanner.jade' import titleBanner10
- from './mixins/mainColumn.jade' import mainColumn

{% extends "layout.jade" %}

{% block javascript %}
script(src="/node_modules/lodash/index.js")
script(src="/node_modules/jquery/dist/jquery.min.js")
script(src="/node_modules/angular/angular.min.js")
{% endblock %}

{% block body %}

div.row.collapse
    div.column.small-12.small-centered
        div.row.uncollapse
            if team.location or team.country or team.year_established
                div.small-6.column
                    +titleBanner10("Info")
                    div.column.small-10.small-centered
                        div.text-xxs
                            div.spacer-lg

                            if team.location
                                div Metro Area: {{team.location}}
                                div.spacer-xs

                            if team.country
                                div Country: {{team.country}}
                                div.spacer-xs

                            if team.year_established
                                div Established in {{team.year_established}}
                                div.spacer-xs

                    div.spacer-xl

            if team.practice_locations
                div.small-6.column
                    +titleBanner10("Practice Locations")
                    div.column.small-10.small-centered
                        div.text-xxs
                            {% for loc in team.practice_locations %}
                            div.spacer-lg
                            div.text-bold
                                if loc.name
                                    span {{loc.name}}
                                else
                                    span Location {{loop.index}}

                            if loc.street_address and loc.city and loc.region and loc.postal_code and loc.country
                                div.spacer-xs
                                div {{loc.street_address}}&nbsp;&nbsp;
                                div.spacer-xs
                                div
                                    span {{loc.city}},&nbsp;
                                    span {{loc.region}}&nbsp;&nbsp;
                                    span {{loc.postal_code}}&nbsp;&nbsp;
                                    span {{loc.country}}
                            else
                                if loc.street_address
                                    div.spacer-xs
                                    div Address: {{loc.street_address}}
                                if loc.city
                                    div.spacer-xs
                                    div City: {{loc.city}}
                                if loc.region
                                    div.spacer-xs
                                    div Region: {{loc.region}}
                                if loc.country
                                    div.spacer-xs
                                    div Country: {{loc.country}}
                            if loc.permalink
                                div.spacer-xs
                                div Link: {{loc.permalink}}
                            {% endfor %}
                    div.spacer-xl


            if team.links
                div.small-6.column
                    +titleBanner10("Links")
                    div.column.small-10.small-centered
                        div.spacer-lg
                        div.text-xxs
                            {% for link in team.links %}
                            div
                                a.text-hover-green(href="#{link.link}"){{link.link}}
                            div.spacer-xs
                            {% endfor %}
                    div.spacer-xl

            if team.contacts
                div.small-6.column
                    +titleBanner10("Contacts")
                    div.column.small-10.small-centered
                        div.spacer-lg
                        div.row.collapse
                            {% for contact in team.contacts %}
                            if contact.title
                                div.column.small-6
                                    div.spacer-xs
                                    div.text-xxs Title: {{contact.title}}
                            if contact.name
                                div.column.small-6
                                    div.spacer-xs
                                    div.text-xxs Name: {{contact.name}}
                            if contact.email
                                div.column.small-6
                                    div.spacer-xs
                                    div.text-xxs Email: {{contact.email}}
                            if contact.phone
                                div.column.small-6
                                    div.spacer-xs
                                    div.text-xxs Phone: {{contact.phone}}
                            if contact.facebook
                                div.column.small-6
                                    div.spacer-xs
                                    div.text-xxs Facebook: {{contact.facebook}}
                            if contact.twitter
                                div.column.small-6
                                    div.spacer-xs
                                    div.text-xxs Twitter: {{contact.twitter}}
                            if contact.whatsapp
                                div.column.small-6
                                    div.spacer-xs
                                    div.text-xxs Whatsapp: {{contact.whatsapp}}
                            {% endfor %}
                    div.spacer-xl

div.spacer-lg

div.spacer-xs
{% endblock %}
