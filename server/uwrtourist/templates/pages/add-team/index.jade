{% extends "layout.jade" %}

{% block javascript %}
script
    window.team = {{ team or {} }};
script(src="http://maps.googleapis.com/maps/api/js?libraries=places")
script(src="https://cdnjs.cloudflare.com/ajax/libs/geocomplete/1.6.5/jquery.geocomplete.js")
script
    $(function () {
        var eventName = "geocode:result";
        $('[ng-model="form.location.val"]')
        .geocomplete()
        .bind(eventName, function(event, result) {
            $(document).trigger(eventName, result);
        });
    });

{% endblock %}

{% block body %}

div.spacer-lg

div.row.uncollapse
    div.column.small-12
        form(
            ng-app="ControllerAddTeam"
            ng-controller="ControllerAddTeam"
            ng-cloak
            novalidate
            ng-submit="submit()"
        )
            div.row.double-gutter
                div.column.small-12
                    div.spacer-xs
                    div.text-xxs
                        span.text-xbold Bold&nbsp;
                        span fields are required
                    div.spacer-lg

            include pages/add-team/basic-info
            include pages/add-team/links
            include pages/add-team/contacts
            include pages/add-team/practices/index

            div.spacer-xl
            div.row.double-gutter
                div.column.small-5.small-offset-2
                    button.pad-tb.width-full.text-sm.btn-green.pressable(
                        type="submit"
                    )
                        div.text-sm.pull-left Submit Team Info
                        i.pull-right.fa.fa-chevron-right

            div.spacer-xl
            div.spacer-xl

{% endblock %}
