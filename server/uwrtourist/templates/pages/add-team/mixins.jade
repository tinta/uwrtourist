mixin textInput (modelName, id)
    - set id = id if id else modelName
    input.text-xxs.input-height(
        type="text"
        id=id
        ng-model="#{modelName}"
    )

mixin label (label, for)
    div.text-right
        div.spacer-xs
        div.spacer-1
        label.text-xbold.text-xxs(for=for)= label