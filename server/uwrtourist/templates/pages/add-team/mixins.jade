mixin textInput (modelName, id)
    - set id = id if id else modelName
    input.text-xxs.input-height(
        type="text"
        id=id
        ng-model="#{modelName}"
    )

mixin label (label, for, req)
    div.text-right
        div.spacer-xs
        div.spacer-1
        - set bold = 'text-xbold' if req else ''
        label.text-xxs(for=for, class=bold)= label