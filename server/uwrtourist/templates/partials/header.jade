div.row.text-center.collapse
    div.column.small-12
        div.spacer-md
        div.row.collapse
            div.column.small-11.small-centered
                a(href="/").pull-left.text-lg.text-thin.valign-top Underwater Rugby Tourist
                a(href="/").pull-right.text-xxs.pad.bg-red.valign-top
                    span.text-white Sign in
        div.spacer-sm

        div.row.collapse.bg-blue.text-white
            div.column.small-11.small-centered
                div.row
                    div.column.small-11.small-centered
                        ul.text-xxxs.text-thin
                            {% for route in pages %}
                            li.show
                                {% set navClass = 'text-hover-gray-md-dark' %}
                                a.pad-lr-2x.pad-tb(
                                    href=route.url
                                )
                                    div.spacer-xxs
                                    div=route.title
                                    div.spacer-xxs
                            {% endfor %}

        {% if title %}
        div.spacer-xs
        div.row.collapse.text-white.text-left
            div.column.small-11.small-centered.bg-red
                div.row
                    div.column.small-11.small-centered
                        div.spacer-sm
                        div.text-md.text-thin= title
                        div.spacer-xs
        div.spacer-xs
        {%  endif %}
